doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/admin/css/style.css")
    title #{Pagetitle}  
  body 
    - if (messages.Success)
      .message.Success.alert.alert-success.alert-message(alert-message)
        span= messages.Success
    - if (messages.danger)
      .message.Success.alert.alert-danger.alert-message(alert-message)
        span= messages.danger
    include ../partials/header.pug
    .body 
      include ../partials/sider.pug

      .main 
        block main
    script(src="/tinymce/tinymce.min.js") 
    script(src="/admin/js/tinymceConfig.js")
    script(src="/admin/js/script.js") 
    script(src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js") 
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js") 